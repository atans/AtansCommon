<?php
$namespace      = isset($this->namespace) ?  $this->namespace : null;
$flashMessenger = $this->flashMessenger()->getPluginFlashMessenger();

if ($namespace) {
    $flashMessenger->setNamespace($namespace);
}
?>

<?php if ($message = $flashMessenger->hasMessages()) :?>
